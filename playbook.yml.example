---

- name: Ansible Playbook for setting up a brand new Raspberry Pi
  hosts: pis
  roles:
    - role: pi
      dhcp:
        router: "172.25.1.1"
        range: "172.25.1.50,172.25.1.150"
        local: "lan"
      eth0:
        address: "172.25.1.10"
        address6: "2a01:368:e000:8074::101"
  remote_user: pi
  become: yes
  become_method: sudo
